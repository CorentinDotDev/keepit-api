# Configuration de base
PORT=3000
NODE_ENV=production

# Base de données
# PostgreSQL (par défaut pour production)
DATABASE_URL=postgresql://notes_user:notes_password@db:5432/notes_db

# PostgreSQL Configuration
POSTGRES_DB=notes_db
POSTGRES_USER=notes_user
POSTGRES_PASSWORD=change-me-in-production

# Alternative: SQLite (pour développement/tests)
# DATABASE_URL=file:./dev.db

# Sécurité JWT
JWT_SECRET=your-super-secret-jwt-key-here-use-openssl-rand-base64-32

# Stripe Configuration (optionnel)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Configuration optionnelle

# Logging (development seulement)
# NODE_ENV=development active automatiquement les logs webhook

# CORS (optionnel, pour production)
# CORS_ORIGINS=https://yourfrontend.com,https://anotherdomain.com

# Limite de taille des requêtes (optionnel)
# MAX_REQUEST_SIZE=10mb